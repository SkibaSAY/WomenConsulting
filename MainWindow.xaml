<Window x:Class="WomenConsulting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WomenConsulting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="BaseMenu" Background="#FF6B71FF" Foreground="#FFF7F7F7" Padding="10,5,0,5" FontSize="14">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый протокол" Click="MenuItem_Click_1" ></MenuItem>
                <MenuItem Header="Открыть">
                    <MenuItem x:Name="OpenDirectoryDialog" Header="Открыть папку" Click="OpenDirectoryDialog_Click" ></MenuItem>
                   
                </MenuItem>
                <Separator />
                <MenuItem Header="Выход" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Настройки" ></MenuItem>
        </Menu>
        <TabControl Margin="0,5.6,-0.4,-2" BorderBrush="#FFAEB1FF" Grid.Row="1">
            <TabItem x:Name="TabItemSem1" Header="1й триместр" Width="100" BorderBrush="#FFAEB1FF">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame x:Name="Frame_Trimestr1" Source="/WomenConsulting;component/Trimestr1.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Trimestr1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="TabItemSem2" Header="2й триместр"  Width="100" Height="30">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame x:Name="Frame_Trimestr2" Source="/WomenConsulting;component/Trimestr2.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Trimestr1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
            <TabItem x:Name="TabItemSem3" Header="3й триместр" Width="100" Height="30">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame x:Name="Frame_Trimestr3" Source="/WomenConsulting;component/Trimestr3.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Trimestr1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
