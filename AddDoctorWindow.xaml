<Window x:Class="WomenConsulting.AddDoctorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WomenConsulting"
        mc:Ignorable="d"
        Title="AddDoctorWindow" Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Введите имя:" Grid.Column="0" Grid.Row="0"/>
        <TextBox Name="NameTextBox" Height="25" Margin="10,0,10,5" Grid.Row="1" VerticalContentAlignment="Center" FontSize="16"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Width="150">
            <Button Content="ОК" Name="okButton" Click="OkButton_Click" IsDefault="True" Width="65" Margin="0,10,10,10"/>
            <Button Content="Отмена" Name="cancelButton" IsCancel="True" Width="65" Margin="0,10,10,10"/>
        </StackPanel>
    </Grid>
</Window>
