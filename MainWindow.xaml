<Window x:Class="WomenConsulting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WomenConsulting"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="70*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="BaseMenu" Background="#FF6B71FF" Foreground="#FFF7F7F7" Padding="10,5,0,5" FontSize="14">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый протокол" ></MenuItem>
                <MenuItem Header="Открыть" >
                    <MenuItem Header="Открыть протокол"></MenuItem>
                    <MenuItem Header="Открыть папку" ></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem Header="Выход" ></MenuItem>
            </MenuItem>
            <MenuItem Header="Настройки" ></MenuItem>
        </Menu>
        <Expander x:Name="generalData" IsExpanded="True" Header="Общие данные" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" Grid.Row="1" Expanded="Expander_Expanded" Collapsed="generalData_Collapsed">
            <StackPanel Margin="0,10,0,0">
               <Grid Margin="21,0,0,0">
                   <Label Content="ФИО" FontWeight="Normal" FontSize="16" HorizontalAlignment="Left"/>
                   <TextBox x:Name="nameText" Margin="50,5,140,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="16" FontWeight="Normal" MinWidth="350"/>
                    <Label Content=", " FontWeight="Normal"  FontSize="16" Margin="5,5,120,0" HorizontalAlignment="Right"/>
                   <TextBox x:Name="ageText" HorizontalAlignment="Right" Margin="5,5,60,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" FontSize="16" FontWeight="Normal"/>
                    <Label Content="лет" FontWeight="Normal" Margin="5,5,21,0"  FontSize="16" HorizontalAlignment="Right"/>
                </Grid>
                <Grid Margin="21,0,0,0">
                    <Label Content="Адрес" FontWeight="Normal" FontSize="16"/>
                    <TextBox x:Name="adressText" Margin="65,5,21,0" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="16" FontWeight="Normal" MinWidth="600"/>
                </Grid>
                <WrapPanel Margin="21,0,0,0">
                    <Label Content="Дата последней менструации" FontWeight="Normal" FontSize="16"/>
                    <DatePicker x:Name="dateOfLastMenstruationText" HorizontalAlignment="Left" Margin="5,5,0,0"  VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Normal" Text="Выберите дату" Foreground="#FF635E5E"/>
                </WrapPanel>
                <WrapPanel Margin="21,0,0,20">
                    <Label Content="Срок беременности" FontWeight="Normal" FontSize="16"/>
                    <TextBox x:Name="gestationPeriodWeeksText" HorizontalAlignment="Left" Margin="5,5,5,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Normal"/>
                    <Label Content="недель" FontWeight="Normal" FontSize="16"/>
                    <TextBox x:Name="gestationPeriodDaysText" HorizontalAlignment="Left" Margin="5,5,5,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Normal"/>
                    <Label Content="дней" FontWeight="Normal" FontSize="16"/>
                </WrapPanel>
            </StackPanel>
        </Expander>
        <TabControl Margin="0,5.6,-0.4,-2" BorderBrush="#FFAEB1FF" Grid.Row="2">
            <TabItem Header="1й триместр" Width="100" BorderBrush="#FFAEB1FF">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame Source="/WomenConsulting;component/Trimestr1.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Page1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="2й триместр"  Width="100" Height="30">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame Source="/WomenConsulting;component/Trimestr2.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Page1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="3й триместр" Width="100" Height="30">
                <ScrollViewer Background="#FFAEB1FF">
                    <Frame Source="/WomenConsulting;component/Trimestr3.xaml" NavigationUIVisibility="Hidden">
                        <Frame.DataContext>
                            <local:Page1/>
                        </Frame.DataContext>
                    </Frame>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
